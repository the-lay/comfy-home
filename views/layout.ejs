<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <title>ComfyHome</title>

    <!--STYLES-->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <!--STYLES END-->
  </head>

  <body>

  <div class="container">
  
    <div class="row">
      
      <nav class="col-sm-2">
        <div class="row">
          <div class="col-sm-12">
            <p class="text-center logo">Comfy<span class="glyphicon glyphicon-home"></span> Home</p>
          </div>
          <ul class="nav nav-pills nav-stacked">
            <li <%= (req.route.path == '/') ? 'class=active' : '' %>><a href="/"><span class="glyphicon glyphicon-home"></span> Home</a></li>
            <li <%= (req.route.path == '/devices/') ? 'class=active' : '' %>><a href="/devices/"><span class="glyphicon glyphicon-list-alt"></span> Devices</a></li>
            <li <%= (req.route.path == '/history/') ? 'class=active' : '' %>><a href="/history/"><span class="glyphicon glyphicon-stats"></span> History</a></li>
            <li <%= (req.route.path == '/triggers/') ? 'class=active' : '' %>><a href="/triggers/"><span class="glyphicon glyphicon-tasks"></span> Triggers</a>
            </li>
            <li <%= (req.route.path == '/dashboard/') ? 'class=active' : '' %>><a href="/dashboard/"><span class="glyphicon glyphicon-th"></span> Dashboard</a></li>
          </ul>
        </nav>

      <%- body %>

    </div>   
  </div>

  <!--SCRIPTS-->
  <script src="/js/socket.io.js"></script>
  <script src="/js/sails.io.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/timeago.js"></script>
  <!--SCRIPTS END-->
  </body>
</html>
